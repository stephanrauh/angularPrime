<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee        http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>treeServlet</servlet-name>
        <servlet-class>be.rubus.angularprime.demo.TreeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>datatableServlet</servlet-name>
        <servlet-class>be.rubus.angularprime.demo.DatatableServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>treeServlet</servlet-name>
        <url-pattern>/data/tree/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>datatableServlet</servlet-name>
        <url-pattern>/data/cars/lazylist/*</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
		<welcome-file>angularPrime12.html</welcome-file>
	</welcome-file-list>
</web-app>